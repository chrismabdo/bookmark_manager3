<ul>
  <% @bookmarks.each do |bookmark| %>
    <li><%= bookmark.gsub(URI.regexp, '<a href="\0">\0</a>') %></li>
  <% end %>
</ul>

<form action="/create" method="post">
  <label for="url">
  Add a new bookmark
  <input type="text" name="url">
  </label>
  <label for="title">
  Add a title
  <input type="text" name="title">
  </label>
  <input type="submit" value="Add Bookmark">
</form>
